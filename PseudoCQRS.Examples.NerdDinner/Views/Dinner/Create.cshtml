@model PseudoCQRS.Examples.NerdDinner.Modules.DinnerCreate.DinnerCreateViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create Dinner</h2>

@using ( Html.BeginForm() )
{
	<h4>Title:</h4>
	@Html.TextBoxFor( x => x.Title )
	@Html.ValidationMessageFor(x => x.Title)
	<br/>

	<h4>Description</h4>
	@Html.TextAreaFor( x => x.Description, 10, 30, null )
	@Html.ValidationMessageFor(x => x.Description)
	<br />

	<h4>Event Date</h4>
	@Html.TextBoxFor( x => x.EventDate )
	@Html.ValidationMessageFor(x => x.EventDate)
	<br/>

	<h4>Host</h4>
	@Html.DropDownListFor( x => x.HostedById, new SelectList( Model.Hosts, "key", "value" ) )
	<br/>
	<br/>
	<button type="submit">Create Dinner</button>
}
